<h1>人氣餐廳</h1>
<hr />
{{#each restaurants}}
<div class="card m-auto w-50">
  <div class="row">
    <div class="col-md-4" style="max-width: 540px">
      <img class="card-img" src="{{this.image}}" alt="restaurant image">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <span class="badge badge-secondary">收藏數：{{this.FavoritedCount}}</span>
        <p class="card-text">{{this.description}}</p>
        <div class="row">
          <a href="/restaurants/{{this.id}}" class="btn btn-primary mx-3">Show</a>
          {{#if this.isFavorited}}
          <form class="d-inline-block" action="/favorite/{{this.id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger mr-2">移除最愛</button>
          </form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST">
            <button type="submit" class="btn btn-primary mr-2">加到最愛</button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
<br />
{{/each}}