<div class="card mb-3">
  <div class=" row no-gutters">
    <div class="col-md-4">
      <img src="{{profile.image}}" class="circle" width="300px" height="300px">
    </div>
    <div class=" col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{profile.name}}</h5>
        <p class="card-text">{{profile.email}}</p>
        {{#ifCond profile.id user.id}}
        <a href="/users/{{profile.id}}/edit">
          <button type="submit" class="btn btn-primary">Edit</button>
        </a>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    {{profile.Comments.length}} 已評論餐廳
  </div>
  <div class="card-body">
    {{#each profile.Comments}}
    <a href="/restaurants/{{this.Restaurant.id}}">
      <img src="{{this.Restaurant.image}}" alt="{{this.Restaurant.name}}" class="rounded mr-3" width="80" height="80">
    </a>
    {{/each}}
  </div>
</div>